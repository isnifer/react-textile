.product
  margin-bottom 50px
  position relative
  display none

  &_state_visible
    display block
  
  &__stat
    padding 10px
    background #ddd
    position fixed
    width 940px
    z-index 19

  &__title
    font-size 2.2em
    color #333
    font-weight 700
    width 280px
    float left

  &__variants
    padding 150px 0 0

  &__overall-value
    float left
    padding 30px 0 0 30px

  &__overall-title
    margin-bottom 10px

  &__overall-item
    float left
    width 100px
    text-align center

  &__overall-item-title
    margin-bottom 10px

  &__overall-item-count
    background #fff
    width 40px
    margin 0 auto
